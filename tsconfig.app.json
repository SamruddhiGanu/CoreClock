{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "moduleResolution": "bundler",

    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "allowImportingTsExtensions": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true
  },

  "include": ["src"]
}
